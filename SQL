*
"SELECIONA TUDO EM COMUM ENTRE A E B
SELECT * FROM A
 INNER JOIN B ON A.key = B.key.

"SELECIONA TUDO DO A E O QUE TEM EM COMUM DO B
SELECT * FROM A
  LEFT JOIN B ON A.key = B.key.

"SELECIONA SOMENTE O QUE TEM EM A E NAO TEM EM B
SELECT * FROM A
  LEFT JOIN B ON A.key = B.key
 WHERE B.key IS NULL.

"SELECIONA TUDO DO B E O QUE TEM EM COMUM DO A
SELECT * FROM A
 RIGHT JOIN B ON A.key = B.key

"SELECIONA SOMENTE O QUE TEM EM B E NAO TEM EM A
SELECT * FROM A
 RIGHT JOIN B ON A.key = B.key
 WHERE A.key IS NULL.

"SELECIONA TUDO DE A E B
SELECT * FROM A
  FULL OUTER JOIN B ON A.key = B.key.

"SELECIONA TUDO DE A E B QUE NAO SÃƒO EM COMUM
SELECT * FROM A
  FULL OUTER JOIN B ON A.key = B.key
 WHERE A.key IS NULL
   AND B.key IS NULL.
*
SELECT 
    CASE 
      WHEN werks = '8001' THEN '8000' 
      ELSE '7010' END as bukrs,
    labst, 
    verpr, 
    labst * verpr AS salk3
  FROM ztmm_ce_ea
 WHERE lfgja = '2021'
   AND lfmon = '01'
   AND werks = '7006'
   AND ( steuc = '8452.30.00' OR
         steuc = '6112.31.00' )
   AND labst > 0
   AND verpr > 0
